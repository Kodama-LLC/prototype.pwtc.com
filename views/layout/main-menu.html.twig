<header data-sticky-container>
    <div data-sticky data-options="marginTop:0;" style="width:100%">
        <!-- desktop menu -->
        <div class="row column hide-for-small-only">
            <!-- top row -->
            <div class="top clearfix">
                {% if loggedin is defined and loggedin %}
                    <ul class="dropdown menu hide-for-small-only float-right" data-dropdown-menu>
                        <li>
                            <a href="#">
                                <img src="web/images/minified/avatar.min.gif" alt="" class="my-profile-pic"/>
                            </a>
                            <ul class="menu">
                                <li><a href="{{ url('home') }}">My Account</a></li>
                                <li><a href="{{ url('inner') }}">Log out</a></li>
                            </ul>
                        </li>
                    </ul>
                {% else %}
                    <ul class="login-menu menu float-right">
                        <li><a href="#" class="tiny primary hollow button">Login</a></li>
                    </ul>
                {% endif %}
            </div>
            <!-- bottom row -->
            <div class="bottom clearfix">
                <ul class="vertical menu">
                    <li><a href="{{ url('home') }}" class="title float-left">PWTC</a></li>
                </ul>
                <ul class="dropdown menu hide-for-small-only float-right" data-dropdown-menu>
                    <li><a href="{{ url('kitchen') }}">Kitchen Sink</a></li>
                    <li>
                        <a href="#">Sample Pages</a>
                        <ul class="menu">
                            <li><a href="{{ url('home') }}">Home</a></li>
                            <li><a href="{{ url('inner') }}">Two Column</a></li>
                            <li><a href="{{ url('three-col') }}">Three Column</a></li>
                            <li><a href="{{ url('rides') }}">Calendar</a></li>
                            <li><a href="{{ url('ride') }}">Sample Ride</a></li>
                            <li><a href="{{ url('account') }}">My Account</a></li>
                        </ul>
                        <li><a href="#" class="scroll-to-contact">Contact</a></li>
                    </li>
                </ul>
            </div>
        </div>
        <!-- mobile menu title bar -->
        <div class="title-bar hide-for-medium" data-hide-for="medium">
            <div class="title-bar-left">
                <div class="title-bar-title"><a href="{{ url('home') }}">PWTC</a></div>
            </div>
            <div class="title-bar-right">
                {% if loggedin is defined and loggedin %}
                    <ul class="dropdown menu float-left" data-dropdown-menu>
                        <li>
                            <a class="mobile-account-menu">
                                <img src="web/images/minified/avatar.min.gif" alt="" class="my-profile-pic"/>
                            </a>
                            <ul class="menu">
                                <li><a href="{{ url('home') }}">My Account</a></li>
                                <li><a href="{{ url('inner') }}">Log out</a></li>
                            </ul>
                        </li>
                    </ul>
                {% else %}
                    <a href="#" class="tiny hollow button">Login</a>
                {% endif %}
                <span data-responsive-toggle="mobile-menu"><button class="menu-icon" type="button" data-toggle></button></span>
            </div>
        </div>
        <!-- mobile menu -->
        <div id="mobile-menu" class="hide-for-medium">
            <ul class="vertical menu" data-accordion-menu>
                <li><a href="{{ url('kitchen') }}">Kitchen Sink</a></li>
                <li>
                    <a href="#">Sample Pages</a>
                    <ul class="menu vertical nested">
                        <li><a href="{{ url('inner') }}">Two Column</a></li>
                        <li><a href="{{ url('three-col') }}">Three Column</a></li>
                        <li><a href="{{ url('rides') }}">Calendar</a></li>
                        <li><a href="{{ url('ride') }}">Sample Ride</a></li>
                        <li><a href="{{ url('account') }}">My Account</a></li>
                    </ul>
                </li>
                <li><a href="#" class="scroll-to-contact">Contact</a></li>
            </ul>
        </div>
    </div>
</header>